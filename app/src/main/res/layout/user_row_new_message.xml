<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:padding="16dp">
    <TextView
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username_textview_new_message"
            android:textSize="20sp"
            app:fontFamily="sans-serif-medium"
            android:textColor="@color/txt_chat"
            app:layout_constraintTop_toTopOf="@+id/imageview_new_message"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_new_message"
            app:layout_constraintVertical_bias="0.392" android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@+id/imageview_new_message" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/txt_chat"
            android:src="@drawable/default_photo_mini"
            tools:layout_editor_absoluteY="1dp" tools:layout_editor_absoluteX="4dp"
            android:id="@+id/imageview_new_message"/>
</androidx.constraintlayout.widget.ConstraintLayout>